@model BE_S6_L1.Models.Studente

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Dettagli Studente</h5>
        <div>
            <button class="btn btn-primary btn-sm edit-student" data-id="@Model.Id">
                <i class="bi bi-pencil"></i> Modifica
            </button>
            <button class="btn btn-danger btn-sm delete-student" data-id="@Model.Id" data-nome="@Model.Nome" data-cognome="@Model.Cognome">
                <i class="bi bi-trash"></i> Elimina
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cognome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cognome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataDiNascita)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataDiNascita)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
